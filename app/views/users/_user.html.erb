<li>
  <%= gravatar_for user, size: 60 %>

  <div>
	  <%= link_to user.name, user %>

  	<% if current_user?(user) %>
  	<span class='gentle'>(You)</span>
  	<% end %>
	</div>

  <div>
  	<%= user.email %>
  </div>

  <div class="warning">
  <% if current_user.admin? && !current_user?(user) %>
    Admin options:
    <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "Are you sure?" } %>
  <% end %>
	</div>
</li>